    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">

  </head>



  <body>

    <% if current_page?(pages_welcome_path) or current_page?(pages_login_path) or current_page?(pages_configure_path) or current_page?(pages_motivators_path) or current_page?(pages_motivators3_path) or current_page?(pages_login3_path) or current_page?(pages_configure3_path) or current_page?(pages_welcome12_path) -%>
