    <% end %>

    <% if current_page?(pages_welcomeman_path) or current_page?(pages_creditteam_path) or current_page?(pages_team_path) or current_page?(pages_team2_path) or current_page?(pages_creditman_path) or current_page?(pages_companyperksman_path) or current_page?(pages_performanceperksman_path) or current_page?(pages_financialman_path) or current_page?(pages_giftman_path) or current_page?(pages_marketman_path) or current_page?(pages_feedman_path) or current_page?(pages_welcomeman2_path) -%>
        <%= render 'layouts/headerman' %>

    <% end %>

    <% if current_page?(pages_values_path) or current_page?(pages_recognise_path) or current_page?(pages_feedback_path) or current_page?(pages_trophies2_path) or current_page?(pages_welcome7_path) or current_page?(pages_feed2_path) or current_page?(pages_market2_path) or current_page?(pages_financial2_path) or current_page?(pages_physical_path) or current_page?(pages_welcome6_path) or current_page?(pages_welcome5_path) or current_page?(pages_welcome4_path) or current_page?(pages_watched_path) or current_page?(pages_welcome3_path) or current_page?(pages_credit_path) or current_page?(pages_companyperks_path) or current_page?(pages_performanceperks_path) or current_page?(pages_financial_path) or current_page?(pages_gift_path) or current_page?(pages_market_path) or current_page?(pages_feed_path) or current_page?(pages_feed1_path) or current_page?(pages_welcome2_path) or current_page?(pages_profile_path) or current_page?(pages_trophies_path) or current_page?(pages_history_path) or current_page?(pages_trophies5_path) -%>
        <%= render 'layouts/header' %>
    <% end %>

    <% if current_page?(pages_welcome10_path) or current_page?(pages_welcome11_path) or current_page?(pages_companyperks4_path)  or current_page?(pages_financial4_path) or current_page?(pages_market5_path) or current_page?(pages_feed4_path) or current_page?(pages_feedback2_path) or current_page?(pages_values2_path) or current_page?(pages_recognise2_path) or current_page?(pages_credit2_path) or current_page?(pages_history2_path) or current_page?(pages_profile2_path) or current_page?(pages_trophies3_path) or current_page?(pages_trophies4_path) or current_page?(pages_financial3_path) or current_page?(pages_market3_path) or current_page?(pages_market6_path) -%>
        <%= render 'layouts/header3' %>
    <% end %>

    <% if current_page?(pages_welcome9_path) or current_page?(pages_companyperks3_path) or current_page?(pages_market4_path) -%>
        <%= render 'layouts/header4' %>
    <% end %>

    <%= yield %>

    <% if current_page?(root_path) or current_page?(pages_login_path) or current_page?(pages_login3_path) or current_page?(pages_configure_path) or current_page?(pages_configure3_path) or current_page?(pages_motivators_path) or current_page?(pages_motivators3_path) or current_page?(pages_welcome_path) or current_page?(pages_welcome12_path) -%>

    <% else %>

        <%= render 'layouts/footer' %>
     <% end %>



    <script>
      (function() {
        $(document).on('click', function (e){
          var collapse1_opened = $('#collapseExample1').hasClass('show');
        
          if(!$(e.target).closest('#collapseExample1').length &&
              !$(e.target).is('#collapseExample1') &&
              collapse1_opened === true){
                  $('#collapseExample1').collapse('toggle');
          }

          var collapse2_opened = $('#collapseExample2').hasClass('show');
        
          if(!$(e.target).closest('#collapseExample2').length &&
              !$(e.target).is('#collapseExample2') &&
              collapse2_opened === true){
                  $('#collapseExample2').collapse('toggle');
          }

          var collapse3_opened = $('#collapseExample3').hasClass('show');
        
          if(!$(e.target).closest('#collapseExample3').length &&
              !$(e.target).is('#collapseExample3') &&
              collapse3_opened === true){
                  $('#collapseExample3').collapse('toggle');
          }

        });
      })();

      $(function(){
  var hash = window.location.hash;
  hash && $('ul.nav a[href="' + hash + '"]').tab('show');

  $('.nav-tabs a').click(function (e) {
    $(this).tab('show');
    var scrollmem = $('body').scrollTop() || $('html').scrollTop();
    window.location.hash = this.hash;
    $('html,body').scrollTop(scrollmem);
  });
});

    </script> 

  </body>
</html>

